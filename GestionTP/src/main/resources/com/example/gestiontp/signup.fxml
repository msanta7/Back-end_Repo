<AnchorPane id="SignUp" fx:id="SignUp" prefHeight="400.0" prefWidth="592.0" stylesheets="@../../../CSS/Style.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.gestiontp.SignUpController">
    <children>
        <VBox id="SignUpbox" fx:id="SignUpbox" alignment="CENTER" layoutX="800.0" layoutY="130.0" prefHeight="450" prefWidth="450" spacing="30.0">
            <children>
                <Text id="linetwo" fx:id="linetwo" text="INSCRIPTION" textAlignment="CENTER" />
                <TextField id="username" fx:id="username" maxHeight="45" maxWidth="380" minHeight="45" minWidth="380" promptText="Nom d'utilisateur" />
                <PasswordField id="password" fx:id="password" maxHeight="45" maxWidth="380" minHeight="45" minWidth="380" promptText="Mot de passe" />
