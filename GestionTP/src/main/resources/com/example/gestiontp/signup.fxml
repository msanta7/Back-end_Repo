                <Button id="inscrirebutton" fx:id="inscrirebutton" mnemonicParsing="false" onAction="#handleSignUp" prefHeight="20" prefWidth="200" text="S'inscrire" />
            </children>
        </VBox>
        <AnchorPane id="systembox" fx:id="systembox" layoutX="-1.0" layoutY="-2.0" prefHeight="711.0" prefWidth="410.0">
            <children>
                <ImageView id="Logo" fx:id="Logo" fitHeight="60.0" fitWidth="60.0" layoutX="12.0" layoutY="12.0">
                    <image>
                        <Image url="@../../../../imagesApp/Logo.png" />
                    </image>
                </ImageView>
                <Text id="systemetext" fx:id="systemetext" layoutX="-77.0" layoutY="303.0" text="SYSTEME DE &#10;GESTION DES&#10;SALLES TP" />
                <Text id="bienvenutext" fx:id="bienvenutext" layoutX="20.0" layoutY="230.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Bienvenu Dans Votre" wrappingWidth="369.989990234375" />
                <Text id="copyrighttext" fx:id="copyrighttext" layoutX="120.0" layoutY="635.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Copyright groupe 10 USTO MB" wrappingWidth="369.989990234375" />
            </children>
        </AnchorPane>
    </children>
</AnchorPane>
